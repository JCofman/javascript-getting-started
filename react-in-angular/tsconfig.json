{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "rootDirs": ["src/@types"],
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "paths": {
      "globals": ["../src/@types"]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
